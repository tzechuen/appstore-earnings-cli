# App Store Connect API credentials
# Get these from: App Store Connect > Users and Access > Integrations > App Store Connect API

# =============================================================================
# REQUIRED: Finance API Key (for downloading financial reports)
# =============================================================================
# Create an API key with "Finance" role access

# Issuer ID (found on the API Keys page)
ASC_ISSUER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Key ID (shown next to your key after creation)
ASC_KEY_ID=XXXXXXXXXX

# Path to your .p8 private key file (downloaded when you created the key)
ASC_PRIVATE_KEY_PATH=./AuthKey_XXXXXXXXXX.p8

# Vendor Number (found in App Store Connect > Payments and Financial Reports)
# This is the numeric ID shown in the top-right of the Financial Reports page
ASC_VENDOR_NUMBER=XXXXXXXX

# =============================================================================
# OPTIONAL: App Manager API Key (for grouping IAPs under parent apps)
# =============================================================================
# Create a SEPARATE API key with "App Manager" or "Admin" role access
# If not provided, earnings will be shown as a flat list without app grouping

# Issuer ID (same as above, or different if using a different account)
ASC_APP_MANAGER_ISSUER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Key ID for the App Manager key
ASC_APP_MANAGER_KEY_ID=XXXXXXXXXX

# Path to the App Manager .p8 private key file
ASC_APP_MANAGER_PRIVATE_KEY_PATH=./AuthKey_AppManager_XXXXXXXXXX.p8

# =============================================================================
# OPTIONAL: Display Settings
# =============================================================================

# Target currency for displaying earnings (default: USD)
# Supported currencies: USD, EUR, GBP, SGD, JPY, AUD, CAD, CHF, CNY, HKD, etc.
# Uses ECB exchange rates via Frankfurter API
TARGET_CURRENCY=USD
