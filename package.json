{
  "name": "appstore-earnings-cli",
  "version": "1.0.0",
  "description": "CLI tool to view App Store earnings by month",
  "type": "module",
  "bin": {
    "appstore-earnings": "./bin/appstore-earnings"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "start:no-cache": "bun run src/index.ts --no-cache",
    "build": "bun build src/index.ts --compile --outfile bin/appstore-earnings",
    "build:macos-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile bin/appstore-earnings-darwin-arm64",
    "build:macos-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile bin/appstore-earnings-darwin-x64",
    "build:linux-x64": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile bin/appstore-earnings-linux-x64",
    "build:linux-arm64": "bun build src/index.ts --compile --target=bun-linux-arm64 --outfile bin/appstore-earnings-linux-arm64",
    "build:windows-x64": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile bin/appstore-earnings-windows-x64.exe",
    "build:all": "bun run scripts/build-all.sh"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.1",
    "cli-table3": "^0.6.5",
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "bun-types": "^1.3.8",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
